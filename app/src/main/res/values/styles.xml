<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorSecondary">?attr/colorPrimary</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <item name="colorControlLight">@color/color_control_light</item>
        <item name="android:navigationBarColor">@color/color_primary</item>
        <item name="navigationBarDividerColor">@color/color_primary</item>
        <item name="toolbarStyle">@style/Toolbar</item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme" />

    <style name="AppThemeLauncher" parent="Base.AppTheme">
        <!-- Window decor -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/use_light_status</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">
            @bool/use_light_navigation
        </item>
        <item name="android:navigationBarColor">@color/nav_bar_scrim</item>
    </style>

    <style name="AppThemeAuth" parent="Base.AppTheme">
        <item name="colorPrimaryDark">@color/color_primary</item>
    </style>

    <style name="AppThemeMain" parent="Base.AppTheme">
        <!-- Window decor -->
<!--        <item name="windowActionModeOverlay">true</item>-->
<!--        <item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
<!--        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/use_light_status</item>-->
<!--        <item name="android:statusBarColor">@color/transparent</item>-->
        <!--        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">-->
        <!--            @bool/use_light_navigation-->
        <!--        </item>-->
        <!--        <item name="android:navigationBarColor">@color/nav_bar_scrim</item>-->
    </style>

    <style name="FilePickerTheme" parent="LibAppTheme">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_primary</item>
    </style>

    <!-- Navigation -->
    <style name="Widget.NavigationBarContentFrameLayout" parent="android:Widget.Material">
        <item name="navigationBarBorderColor">?attr/navigationBarDividerColor</item>
        <item name="navigationBarBorderSize">1dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppBar" parent="@style/Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
        <item name="android:elevation" tools:targetApi="lollipop">8dp</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
        <item name="elevation">8dp</item>
    </style>


    <style name="TextTitle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextSubTitle" parent="@style/TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextBody1" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:drawablePadding">@dimen/spacing_tiny</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextBodySmall" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:drawablePadding">@dimen/spacing_tiny</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>


    <style name="Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:paddingLeft">@dimen/spacing_huge</item>
        <item name="android:paddingRight">@dimen/spacing_huge</item>
        <item name="android:paddingTop">@dimen/spacing_medium</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
        <item name="android:textSize">@dimen/abc_text_size_button_material</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/color_accent</item>
    </style>

    <style name="ButtonIcon" parent="@style/Widget.MaterialComponents.Button.Icon">
        <item name="android:paddingLeft">@dimen/spacing_huge</item>
        <item name="android:paddingRight">@dimen/spacing_huge</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:paddingTop">@dimen/spacing_medium</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
        <item name="android:textSize">@dimen/abc_text_size_button_material</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonTextColorPrimary" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/abc_text_size_button_material</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonTextColoBlue" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/abc_text_size_button_material</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/color_accent</item>
    </style>

    <style name="ButtonFlat" parent="@style/Button">
        <item name="cornerRadius">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">@dimen/abc_text_size_button_material</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonRound" parent="@style/Widget.MaterialComponents.Button">
        <item name="cornerRadius">6dp</item>
        <item name="android:paddingTop">@dimen/spacing_medium</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
        <item name="android:textSize">@dimen/abc_text_size_button_material</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonOutline" parent="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="cornerRadius">6dp</item>
        <item name="android:paddingTop">@dimen/spacing_medium</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
        <item name="android:textSize">@dimen/abc_text_size_button_material</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    </style>

    <style name="TextInputLayoutSpinner" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

    </style>

    <style name="TextInputEditText" parent="@style/Base.Widget.MaterialComponents.TextInputEditText">
        <item name="backgroundTint">@android:color/white</item>
    </style>

    <style name="CheckBox" parent="@style/Widget.MaterialComponents.CompoundButton.CheckBox">

    </style>

    <style name="RadioGroup" parent="">

    </style>

    <style name="RadioButton" parent="@style/Widget.MaterialComponents.CompoundButton.RadioButton">

    </style>


    <style name="HorizontalProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">

    </style>

    <style name="VerticalProgressBar" parent="@style/Widget.AppCompat.ProgressBar">

    </style>


    <style name="Widget.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <!--        <item name="strokeColor">?android:attr/colorControlHighlight</item>-->
        <!--        <item name="strokeWidth">1dp</item>-->
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="android:elevation">@dimen/card_elevation</item>
        <item name="elevation">@dimen/card_elevation</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="TabLayout" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.TabLayoutThemeOverlay</item>
    </style>

    <style name="TabLayoutThemeOverlay" parent="@style/Widget.MaterialComponents.TabLayout">
        <!--        <item name="android:background">@color/colorPrimary</item>-->
        <!--        <item name="tabTextColor">@color/mtrl_tabs_text_color_white_selector</item>-->
        <item name="tabIndicatorColor">@color/color_accent</item>
        <item name="tabTextAppearance">@style/TextAppearance.TabLayoutThemeOverlay</item>
    </style>

    <style name="TextAppearance.TabLayoutThemeOverlay" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="lineSpacing">2dp</item>
    </style>

</resources>